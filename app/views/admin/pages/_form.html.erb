<%= custom_form_for [:admin, @page] do |f| %>
  <%= f.input :title   , autofocus: true %>
  <%= f.input :slug    , disabled: @page.protected? %>
  <%= f.input :old_slug, disabled: @page.protected? %>
  <%= f.input :description %>
  <%= f.input :content, input_html: { class: 'form-control monospaced-field'} %>
  <%= f.input :publication_date %>
  <%= f.input :protected %>
  <%= f.button :submit, name: nil, data: {disable_with: t(:wait)}, class: [:btn, :'btn-primary'] %>
<% end %>