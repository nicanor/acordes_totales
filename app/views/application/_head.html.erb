<%= content_tag :title, t(:tag_title) %>
<%= stylesheet_link_tag "application", media: :all, "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= favicon_link_tag %>
<%= csrf_meta_tags %>

<%= tag :meta, charset: "UTF-8" %>
<%= tag :meta, name: :author, content: "Nicanor Perera" %>
<%= tag :meta, name: :language, content: I18n.locale %>
<%= tag :meta, lang: I18n.locale, name: :description, content: @page.description if @page %>

<%= tag :link, rel: :canonical, href: @canonical if @canonical %>

<% if @tab %>
  <%= tag :meta, property: 'og:title'      , content: @tab.title %>  
  <%= tag :meta, property: 'og:description', content: @page.content if @page %>
<% end %>

<%= tag :meta, property: 'og:url'      , content: request.url %>
<%= tag :meta, property: 'og:type'     , content: :website %>
<%= tag :meta, property: 'og:image'    , content: image_url('guitar.png') %>
<%= tag :meta, property: 'og:site_name', content: t(:brand) %>
<%= tag :meta, property: 'fb:app_id'   , content: t(:brand) %>