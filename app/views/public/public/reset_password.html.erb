<header class="page-header">
  <h1><%= t :reset_password %></h1>
</header>

<%= custom_form_for @user, url: submit_reset_password_path do |f| %>
  <%= f.input :email, hint: false, disabled: true %>
  <%= f.input :password, hint: t(:enter_new_password), autofocus: true %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, name: nil, value: t(:change_password), data: {disable_with: t(:wait)}, class: 'btn btn-primary' %>
  <%= hidden_field_tag :token, @token %>
<% end %>