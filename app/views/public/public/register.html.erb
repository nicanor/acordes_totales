<header class="page-header">
  <h1><%= t :register %></h1>
  <h2><%= t :is_free %></h2>
</header>

<%= custom_form_for @user, url: submit_register_path do |f| %>
  <section class="row">
    <section class="col-md-6"><%= f.input :first_name, autofocus: true %></section>
    <section class="col-md-6"><%= f.input :last_name %></section>
  </section>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, name: nil, value: t(:register), data: {disable_with: t(:wait)}, class: [:btn, :'btn-primary'] %>
<% end %>