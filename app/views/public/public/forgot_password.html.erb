<header class="page-header">
  <h1><%= t :forgot_password %></h1>
</header>

<%= custom_form_for User.new, url: send_instructions_path do |f| %>
  <%= f.input :email, autofocus: true, hint: t(:forgot_password_instructions) %>
  <%= f.button :submit, name: nil, value: t(:reset_password), data: {disable_with: t(:wait)}, class: 'btn btn-primary' %>
<% end %>