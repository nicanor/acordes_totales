<header class="page-header">
  <h1><%= t :search %> <small><%= @search.query %></small></h1>
</header>

<h2><%= t :artists %> <small><%= t :results, count: @search.artists.count %></small></h2>
<%= content_tag :ul, render(@search.artists), class: 'nav nav-pills nav-stacked artist-list' %>

<h2><%= t :tabs %> <small><%= t :results, count: @search.tabs.count %></small></h2>
<%= content_tag :section, render(@search.tabs, show_artist: true), class: 'tab-list list-group' %>